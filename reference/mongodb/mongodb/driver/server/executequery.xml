   <member><classname>MongoDB\Driver\Query</classname></member>
   <member><classname>MongoDB\Driver\ReadPreference</classname></member>
   <member><function>MongoDB\Driver\Manager::executeQuery</function></member>
  </simplelist>
 </refsect1>

</refentry>

