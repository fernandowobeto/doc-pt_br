<refentry xml:id="function.sodium-crypto-core-ristretto255-scalar-random" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>sodium_crypto_core_ristretto255_scalar_random</refname>
  <refpurpose>Gera uma chave aleatória</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>sodium_crypto_core_ristretto255_scalar_random</methodname>
   <void/>
  </methodsynopsis>
  <para>
   Gera uma chave aleatória.
   Disponível a partir do libsodium 1.0.18.
  </para>

  &warn.undocumented.func;
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retorna uma &string; de 32 bytes aleatória.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemplo de <function>sodium_crypto_core_ristretto255_scalar_random</function></title>
    <programlisting role="php">
<![CDATA[
<?php

$foo = sodium_crypto_core_ristretto255_scalar_random();
$bar = sodium_crypto_core_ristretto255_scalar_random();

$value = sodium_crypto_core_ristretto255_scalar_add($foo, $bar);
$value = sodium_crypto_core_ristretto255_scalar_sub($value, $bar);

var_dump(hash_equals($foo, $value));
?>
]]>
    </programlisting>
    &example.outputs;
    <screen>
<![CDATA[
bool(true)
]]>
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>sodium_crypto_core_ristretto255_scalar_add</function></member>
    <member><function>sodium_crypto_core_ristretto255_scalar_sub</function></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>
