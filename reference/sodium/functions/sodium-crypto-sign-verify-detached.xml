<refentry xml:id="function.sodium-crypto-sign-verify-detached" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>sodium_crypto_sign_verify_detached</refname>
  <refpurpose>Verifica a assinatura da mensagem</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>sodium_crypto_sign_verify_detached</methodname>
   <methodparam><type>string</type><parameter>signature</parameter></methodparam>
   <methodparam><type>string</type><parameter>message</parameter></methodparam>
   <methodparam><type>string</type><parameter>public_key</parameter></methodparam>
  </methodsynopsis>
  <para>
   Verifica a assinatura da mensagem
  </para>

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>signature</parameter></term>
    <listitem>
     <para>
      A assinatura criptográfica obtida de <function>sodium_crypto_sign_detached</function>
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>message</parameter></term>
    <listitem>
     <para>
      A mensagem sendo verificada
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>public_key</parameter></term>
    <listitem>
     <para>
      Chave pública Ed25519
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.success;
  </para>
 </refsect1>


</refentry>
