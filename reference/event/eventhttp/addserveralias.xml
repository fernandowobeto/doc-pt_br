 <refnamediv>
  <refname>EventHttp::addServerAlias</refname>
  <refpurpose>Adiciona um sin么nimo de servidor ao objeto do servidor HTTP</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier>
   <type>bool</type>
   <methodname>EventHttp::addServerAlias</methodname>
   <methodparam>
    <type>string</type>
    <parameter>alias</parameter>
   </methodparam>
  </methodsynopsis>
  <para>
   Adiciona um sin么nimo de servidor ao objeto do servidor HTTP.
  </para>
 </refsect1>
 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term>
     <parameter>alias</parameter>
    </term>
    <listitem>
     <para>
      O sin么nimo a adicionar.
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.success;
  </para>
 </refsect1>
 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>
    Exemplo de <function>EventHttp::addServerAlias</function></title>
   <programlisting role="php">
<![CDATA[
<?php
$base = new EventBase();
$http = new EventHttp($base);

$socket = socket_create(AF_INET, SOCK_STREAM, SOL_TCP);

if (!$http->bind("127.0.0.1", 8088)) {
    exit("bind(1) falhou\n");
};

if (!$http->addServerAlias("local.net")) {
    exit("Falha ao adicionar sin么nimo de servidor\n");
}

$http->setCallback("/about", function($req) {
    echo "URI: ", $req->getUri(), PHP_EOL;
    $req->sendReply(200, "OK");
});
$base->dispatch();
?>
]]>
   </programlisting>
  </example>
 </refsect1>
